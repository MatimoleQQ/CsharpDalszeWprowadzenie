<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Text="Bok kwadratu"/>
        <TextBlock Grid.Column="0" Grid.Row="1" Text="Pole kwadratu"/>
        <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="Oblicz" Click="Oblicz"/>
        <TextBox Grid.Column="1" Grid.Row="0" x:Name="bok" IsEnabled="true"/>
        <TextBox Grid.Column="1" Grid.Row="1" x:Name="pole" IsEnabled="false"/>
        <TextBox Grid.Column="1" Grid.Row="2" x:Name="obwod" IsEnabled="false"/>
    </Grid>
</Window>
